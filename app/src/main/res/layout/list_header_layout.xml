<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_faculty_code"
            style="@style/HeaderTextView"
            android:text="Faculty Code" />

        <TextView
            android:id="@+id/tv_faculty_name"
            style="@style/HeaderTextView"
            android:text="Faculty Name" />

        <TextView
            android:id="@+id/tv_faculty_email"
            style="@style/HeaderTextView"
            android:text="Faculty Email" />

        <TextView
            android:id="@+id/tv_faculty_password"
            style="@style/HeaderTextView"
            android:text="Faculty Password" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>