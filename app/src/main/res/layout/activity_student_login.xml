<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login"
    tools:context=".Student_Login">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="2dp"
                app:boxStrokeColor="@color/purple">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEnroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="8dp"
                    android:hint="Enrollment No."
                    android:text="21004501210025"
                    android:padding="8dp"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:counterEnabled="true"
                app:counterMaxLength="7"
                app:endIconMode="password_toggle"
                app:boxStrokeWidth="2dp"
                app:boxStrokeColor="@color/purple">

                <com.google.android.material.textfield.TextInputEditText
                    android:maxLength="7"
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="8dp"
                    android:text="4933447"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Semester"
                            android:textSize="18dp"
                            android:layout_marginTop="20dp"/>
                        <Spinner
                            android:id="@+id/spin_sem"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:prompt="@string/app_name"
                            android:background="@drawable/shape"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Division"
                            android:textSize="18dp"
                            android:layout_marginTop="20dp"/>
                        <Spinner
                            android:id="@+id/spin_div"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape"
                            />

            <Button
                android:id="@+id/login_BTtn"
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:text="Login"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.753" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


